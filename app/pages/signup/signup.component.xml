<StackLayout #container>
  <Label text="Liszt" class="app-name"></Label>

  <TextField #email hint="Email Address" keyboardType="email"
    autocorrect="false" autocapitalizationType="none">
  </TextField>
  <TextField #password hint="Password" secure="true"></TextField>
  <TextField #password hint="Confirm Password" secure="true"></TextField>

  <Button text="Sign up" class="sign-up-button"
  [nsRouterLink]="['/signup']">
  </Button>
  <Button text="back to login" class="back-to-login-button"
         [nsRouterLink]="['/login']">
  </Button>
</StackLayout>