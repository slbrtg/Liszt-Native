<StackLayout #container>
  <Label text="Liszt" class="app-name">

  </Label>
  <TextField #email hint="Email Address"
    autocorrect="false" autocapitalizationType="none" keyboardType="email" returnKeyType="next">
  </TextField>
  <TextField #password hint="Password" secure="true" returnKeyType="done"></TextField>

  <Button text="Sign in" class="sign-in-button button">
  </Button>
  <Button text="sign up" class="sign-up-button button"
  [nsRouterLink]="['signup']">
  </Button>
</StackLayout>