<StackLayout #container>
  <Label text="Liszt" class="app-name">

  </Label>

  <TextField hint="Email Address" keyboardType="email"
    autocorrect="false" autocapitalizationType="none" [(ngModel)] = "email" keyboardType="email" returnKeyType="next">
  </TextField>

  <TextField hint="Password" secure="true" [(ngModel)] = "password" returnKeyType="done">
  </TextField>

  <Button text="Sign in" class="sign-in-button button" (tap)="login()">
  </Button>
  <Button text="sign up" class="sign-up-button button"
  [nsRouterLink]="['signup']">
  </Button>
</StackLayout>